<?xml version="1.0" encoding="ISO-8859-1" ?>
<mvp4g xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://mvp4g.googlecode.com/svn/tags/mvp4g-1.1.0/xsd/mvp4g-conf.xsd">
	<filters>
		<filter name="productEventFilter" class="com.mvp4g.example.client.product.presenter.ProductListPresenter" />
	</filters>
	<history package="com.mvp4g.example.client.product.historyConverter">
		<converter name="productHC" class="ProductHistoryConverter"/>
	</history>
	<views package="com.mvp4g.example.client.product.view" >
		<view name="listView" class="ProductListView" />
		<view name="displayView" class="ProductDisplayView"/>
		<view name="editView" class="ProductEditView"/>
		<view name="creationView" class="ProductCreationView"/>
	</views>
	<services package="com.mvp4g.example.client.product" >
		<service name="service" class="ProductService" />
	</services>
	<presenters package="com.mvp4g.example.client.product.presenter" >
		<presenter name="listPresenter" class="ProductListPresenter" view="listView" services="service" />
		<presenter name="displayPresenter" class="ProductDisplayPresenter" view="displayView" services="service" />
		<presenter name="editPresenter" class="ProductEditPresenter" view="editView"  services="service" />			
		<presenter name="creationPresenter" class="ProductCreationPresenter" view="creationView"  services="service" />
	</presenters>
	<events>
		<event type="goToProduct" handlers="listPresenter" />
		<event type="goToCreation" handlers="creationPresenter" />
		<event type="goToEdit" handlers="editPresenter" />
		<event type="goToDisplay" handlers="displayPresenter" history="productHC"/>
		<event type="changeBody" eventObjectClass="com.google.gwt.user.client.ui.Widget" forwardToParent="true"/>
		<event type="displayMessage" eventObjectClass="java.lang.String" forwardToParent="true"/>
		<event type="productCreated" handlers="listPresenter, displayPresenter"/>
		<event type="productDeleted" handlers="listPresenter"/>
		<event type="selectProductMenu" forwardToParent="true" eventObjectClass=""/>		
	</events>
	
	<start view="listView" />
	
</mvp4g>		